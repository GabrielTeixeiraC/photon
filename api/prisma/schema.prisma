generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  followers_count Int      @default(0)
  likes_count     Int      @default(0)
  created_at      DateTime @default(now())

  @@map("users")
}
